<p>List of checked out books</p>
<p>List of Patrons</p>
<p>Optional:Delete Patron</p>

<% if @books.any?() %>
<h3>Book listings</h3>
<ul>
  <% @books.each do |book| %>
    <li><a href="/books/<%= book.id() %>"><%= book.title() %></a></li>
  <% end %>
</ul>

<% else %>
  <h3>There are no books added yet!</h3>
<% end %>



<h3>Add books</h3>
<form action="/add_book" method="post">
  <label for="title">Book title:</label>
  <input id="title" name="title" type="text">
  <label for="author">Author:</label>
  <input id="author" name="author" type="text">
  <div class="radio">
    <label>
      <input type="radio" name="status" value="t" checked>Available
    </label>
    <label>
      <input type="radio" name="status" value="f">Checked Out
    </label>
  </div>
  <button type="submit">Add Book</button>
</form>
