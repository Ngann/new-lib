
<form action="/patron_listing/<%= @patron.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
    <% @patrons.each() do |patron| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="patron_ids[]" value="<%= patron.id() %>"><%= patron.name() %>
        </label>
      </div>
    <% end %>
  <button type="delete">Delete a Patron</button>
</form>


<% if @books.any?() %>
<h3>Book listings</h3>
<ul>
  <% @books.each do |book| %>
    <li><a href="/books/<%= book.id() %>"><%= book.title() %></a></li>
  <% end %>
</ul>

<% else %>
  <h3>There are no books added yet!</h3>
<% end %>
